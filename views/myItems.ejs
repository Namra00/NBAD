<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
      <meta charset="utf-8">
      <title>Anime Wolrd</title>
      <link rel="stylesheet" type="text/css" href="/assets/stylesheet/myitems.css">
      <link rel="stylesheet" href="/assets/font-awesome-4.7.0/css/font-awesome.min.css">
      <link rel="stylesheet" href="/assets/fontawesome-free-5.6.3-web/css/all.css">
      <script type="text/javascript" src="/assets/js/myscripts.js"></script>
    </head>
    <body>
      <div class="wrapper">
        <% include partials/site-navigation.ejs %>
        <div id="main">
          <div class="imagewrapper">
            <% include partials/header.ejs %>
            <% include partials/user-navigation.ejs %>
          </div>
          <% data2 = userProfile.getItems(); %>
              <div class="content">


                  <div class="sec-intro">
                      <img class="img" src="/assets/images/tobi.jpg" alt="itachi" />
                      <img class="img" src="/assets/images/itachi.jpg" alt="kaneki" />
                      <img class="img" src="/assets/images/ichigo.jpg" alt="kaneki" />
                      <img class="img" src="/assets/images/anime1.jpg" alt="kaneki" />
                  </div>

                  <div class="sec-content">
                    <table class="saveditem">
                        <tbody>
                            <tr class="tableheader">
                              <th class="name"><span class="redletter">A</span>nime</th>
                              <th class="category"><span class="redletter">C</span>ategory</th>
                              <th class="rating"><span class="redletter">M</span>y Rating</th>
                              <th class="status"><span class="redletter">W</span>atched it</th>
                              <th class="colbutton"></th>
                              <th class="colbutton"></th>
                            </tr>
                           <% for(var i=0; i< data2.length; i++){ %>
                            <tr>
                              <td class="name"><%= data2[i].item.itemName %></td>
                              <td class="category"><%= data2[i].item.catalogCategory %></td>
                              <td class="rating"> <%= data2[i].rateIt %></td>
                              <td class="status"><%= data2[i].watchedIt %></td>
                              <td class="update">
                                <form class="form1" action="/feedback" method="get">
                                <input type="hidden" name="itemCode" value="<%= data2[i].item.itemCode %>"/>
                                <button type="submit" name="action" value="update">
                                  <span class="redletter">U</span>pdate
                                </button>
                              </form>
                            </td>
                              <td class="delete"><form class="form1" action="/myitems" method="get">
                                <input type="hidden" name="itemCode" value="<%= data2[i].item.itemCode %>"/>
                                <button type="submit" name="action" value="delete">
                                  <span class="redletter">D</span>elete
                                </button>
                              </form>
                            </td>
                            </tr>
                           <% } %>
                        </tbody>
                    </table>
                  </div>
                  <span id="newanime">Click <a href="#">here</a> to share a new anime</span>



              </div>
              <% include partials/footer.ejs %>
          </div>
        </div>
    </body>
</html>
